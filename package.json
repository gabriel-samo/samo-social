{
  "name": "samo-social-app-demo",
  "version": "0.0.1",
  "description": "Demo project for a social app using react, nodejs, mysql and typescript. bundled with esbuild",
  "main": "dist/server.js",
  "scripts": {
    "watch:client": "node esbuild-config/client.dev.mjs",
    "watch:server": "node esbuild-config/server.dev.mjs",
    "watch:restart-server": "nodemon --config nodemon.json",
    "dev": "npm-run-all --parallel watch:*",
    "build:client": "node esbuild-config/client.prod.mjs",
    "build:server": "node esbuild-config/server.prod.mjs",
    "build": "npm-run-all --sequential build:*",
    "start": "node dist/server.js"
  },
  "keywords": [
    "typescript",
    "react",
    "express",
    "esbuild",
    "boilerplate"
  ],
  "author": "Covalence",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.18",
    "@mui/material": "^5.15.18",
    "@reduxjs/toolkit": "^2.2.5",
    "notyf": "^3.10.0",
    "react-hook-form": "^7.51.5",
    "react-jwt": "^1.2.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.23.1",
    "rsuite": "^5.64.0",
    "axios": "^1.7.2",
    "bootstrap": "^5.3.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "mysql2": "^3.9.7",
    "multer": "^1.4.5-lts.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "esbuild-sass-plugin": "^2.12.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/dotenv": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.0.1",
    "esbuild": "^0.19.2",
    "@types/moment": "^2.13.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "sass": "^1.77.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
